<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:padding="@dimen/activity_vertical_margin"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:id="@+id/pholume_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/pholume_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/volume_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_volume_off" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pholume_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@color/black" />

                <EditText
                    android:id="@+id/pholume_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pholume_title"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="4dp"
                    android:paddingTop="0dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    tools:text="Pholume" />

                <TextView
                    android:id="@+id/pholume_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pholume_title"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    tools:text="\@hichamoaj" />

                <TextView
                    android:id="@+id/pholume_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pholume_user"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    tools:text="2 mins ago" />

                <LinearLayout
                    android:id="@+id/buttons_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/like_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_heart"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/comment_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/like_button"
                        android:layout_alignParentEnd="true"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_comment"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        tools:text="1" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>